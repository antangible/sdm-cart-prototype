---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="referrer" content="strict-origin" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script src="https://kit.fontawesome.com/157183117a.js" crossorigin="anonymous"></script>
		
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<div class="container-fluid shadow-lg fixed-top">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3">
			  <a href="/index/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
				<span class="fs-4">Logo Salone</span>
			  </a>
		
			  <ul class="nav nav-pills">
				<li class="nav-item"><a href="#" class="nav-link">Designer stories</a></li>
				<li class="nav-item"><a href="#" class="nav-link">Brand</a></li>
				<li class="nav-item"><a href="#" class="nav-link">Prodotti</a></li>
				<li class="nav-item"><a href="#" class="nav-link">Manifestazionis</a></li>
				<li class="nav-item"><a href="/login/" class="nav-link"><i class="fa-regular fa-user"></i></a></li>
				
				
			  </ul>
			</header>
		</div>
	</div>
	
	<body>
		<slot />
		<script src="../scripts/cart.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
	</body>
</html>

<style is:global>
	body {
		font-family: Arial, sans-serif;
		margin: 0;
	}

	main {
		width: 100%;
		margin: 0 auto;
		padding-top: 160px;
	}

</style>