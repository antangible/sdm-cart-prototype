<style is:global lang="scss">
	body {
		font-family: Arial, sans-serif;
		margin: 0;
	}

	body:has(.overlay.is-visible) {
		overflow: hidden;
	}

	main {
		width: 100%;
		margin: 0 auto;
		padding-top: 160px;
	}

	@media (max-width: 600px ) {
		main {
			padding: 80px 16px;
		}
	}

	.overlay {
		display: none;
		position: fixed; 
		top: 0;
		left: 0;
		z-index: 2000;
		background-color: rgba(0, 0, 0, .6);
		width: 100%;
		height: 100%;

		&.is-visible {
			display: block;
		}

	}

	.alert-danger, .alert-warning {
    position: fixed;
    top: 100px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4000;
  }

	[data-netlify-identity-menu] {
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		&.logged-in {
			position: fixed;
			top: initial;
			left: initial;
			transform: initial;
			bottom: 0;
			right: 0;
			background-color: #f2caca;
			text-align: center;
			padding: 8px;
			z-index: 9999;
		}
		ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}

		li a {
			color: #000;
			font-weight: bold;
		}
		.netlify-identity-user-details,
		.netlify-identity-signup {
			display: none;
		}
	}

	#netlify-identity-widget {
		z-index: 9999 !important;
	}

</style>