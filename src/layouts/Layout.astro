<style is:global lang="scss">
	body {
		font-family: Arial, sans-serif;
		margin: 0;
	}

	body:has(.overlay.is-visible) {
		overflow: hidden;
	}

	main {
		width: 100%;
		margin: 0 auto;
		padding-top: 160px;
	}

	.overlay {
		display: none;
		position: fixed; 
		top: 0;
		left: 0;
		z-index: 2000;
		background-color: rgba(0, 0, 0, .6);
		width: 100%;
		height: 100%;

		&.is-visible {
			display: block;
		}

	}

	.alert-danger, .alert-warning {
    position: fixed;
    top: 100px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4000;
  }

</style>