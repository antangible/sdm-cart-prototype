---
interface Props {
  title: string;
  subtitle?: string;
  link?: string;
  href?: string;
  icona?: string;
  utente?: string;
}

const { icona, link, href, title, subtitle, utente } = Astro.props;
---

<div class="pb-4">
  <div class="d-flex justify-content-between">
    <a href={href}>{link}</a>
    <p><span class="badge text-info bg-info bg-opacity-10">{utente}</span></p>
  </div>
  <i class={icona}></i>
  <div class="pt-4">
    <h1 set:html={title} />
    <p set:html={subtitle} class="fs-5" />
  </div>
</div>

<style></style>
